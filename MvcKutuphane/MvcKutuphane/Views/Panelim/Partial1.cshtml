@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{ string renk = "";}
@foreach (var x in Model)
{
    if (x.KATEGORI == "Dikkat")

    {
        renk = "#ff0000";
    }
    if (x.KATEGORI == "İletişim")

    {
        renk = "#ee9a00";
    }
    if (x.KATEGORI == "Yeni Kitap")

    {
        renk = "#ee9a00";
    }
    if (x.KATEGORI == "Bilgilendirme")
    {
        renk = "#ff0000";
    }

    if (x.KATEGORI == "Kitapları Geciktirmeyin")
    {
        renk = "#ff0000";
    }

    <div class="post">

        <div class="user-block">

            <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/2.png" />


            <span class="username">

                <a href="#" style="color:@renk">@x.KATEGORI</a>

                <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

            </span>

            <span class="description">@x.TARIH.ToString();</span>

        </div>

        <!-- /.user-block -->

        <p>
            @x.ICERIK
        </p>
    </div>
}
